<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingMovies" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- StatusResponse bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@color/black_little</item>
    </style>

    <!-- Splash Page -->
    <style name="SplashPage" parent="Theme.Design.NoActionBar">
        <item name="android:background">@color/black_little</item>
    </style>

    <!-- Detail Page -->
    <style name="Theme.DetailPage" parent="Theme.DicodingMovies">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Detail Page - ScrollView -->
    <style name="ScrollViewDetailPage">
        <item name="android:background">@color/black_little</item>
    </style>

    <!-- ProgressBar and SearchView -->
    <style name="BlackAccent" parent="Theme.DicodingMovies">
        <item name="colorAccent">@color/black_little</item>
    </style>

    <style name = "AppTheme" parent = "BaseAppTheme2" />
    <!-- custom theme -->
    <style name = "BaseAppTheme2" parent = "Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">@color/colorOrange</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>

        <!-- StatusResponse bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@color/black_little</item>
    </style>
</resources>
